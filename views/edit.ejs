<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- usamos boxicons-->
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>

    <link rel="stylesheet" href="/public/styles/edit.css">

    <title>ramais</title>
</head>

<body>

    <nav>
        <img src="/public/image/cropped-LOGO-LOURENÇO-FILHO-105x95.png" alt="CLF">
        
        <label class="logo">DTI RAMAIS</label>

        <ul>
            <li><a class= "active" href="/admin">Home</a></li>
            
            
            
        </ul>
    </nav>
    
    <% if (ramal) { %>
    <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card-header" style="font-weight: bold;">Editar registro</div>
            <div class="card-body">
                <form action="/update" method="POST">
                    <input id="id" name="id" value="<%= ramal.id %>" hidden>
                    <div class="mb-3">
                        <label for="ramal" class="form-label" style="font-weight: bold;">Ramal</label>
                        <input type="text" name="ramal" class="form-control" id="ramal" value="<%= ramal.ramal %>" tabindex="1" >
                    </div>
                    <div class="mb-3">
                        <label for="setor" class="form-label" style="font-weight: bold;">Setor</label>
                        <select id="setor" name="setor" class="form-select" id="setor" value="<%= ramal.setor %>" tabindex="2">
                            <optgroup>
                                <option value="dti">dti</option>
                                <option value="secretaria">secretaria</option>
                                <option value="financeiro">financeiro</option>
                                <option value="coordenacao">coordenacao</option>
                               </optgroup>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="funcionario" class="form-label" style="font-weight: bold;">Funcionário</label>
                        <input type="text" name="funcionario" class="form-control" id="funcionario" value="<%= ramal.funcionario %>" tabindex="3">
                    </div>
                    <div class="mb-3">
                        <label for="empresa" class="form-label" style="font-weight: bold;">Empresa</label>
                        <select id="empresa" name="empresa" class="form-select" value="<%= ramal.empresa %>" tabindex="4">
                            <optgroup>
                                <option value="central">Centro</option>
                                <option value="parangaba">Parangaba</option>
                                <option value="vegaSul">Vega Sul</option>
                                <option value="montese">Montese</option>
                               </optgroup>
                        </select>
                    </div>


                    <button type="submit" class="btn btn-success" tabindex="5">Salvar</button>
                    <a href="/admin" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>

    </div>

    <% } %>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>


</body>

</html>